@page "/viewitems"
@using Design_A_Bear.Models
@using Design_A_Bear.Services
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager NavigationManager
@inject IItemService ItemService
@rendermode InteractiveAuto
@attribute [Authorize(Roles ="Admin")]

<h3 class="fw-bold mt-4 mb-4">View all Items</h3>

<table class="table table-striped table-hover">

    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in items)
        {
            <tr>
                <td scope="row">@item.Id</td>
                <td><img src="@getImageSource(item.ImgBase64)" alt="@item.Name image" style="width: 100px; height: 100px;" /></td>
                <td>@item.Name</td>
                <td>£@item.Price.ToString("F2")</td>
                <td>
                    <div>
                        <a href="/upsertItem/@item.Id" class="btn btn-primary">Edit</a>
                        <button class="btn btn-danger">Delete</button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


@code {
    private List<Item> items = new List<Item>();


    protected override async Task OnInitializedAsync()
    {
        items = await ItemService.GetAllItems();
    }
    private string getImageSource(string base64)
    {
        return $"data:image/png;base64,{base64}";
    }
    private void EditItem(int id)
    {
        NavigationManager.NavigateTo($"/upsert/{id}");
    }
}
